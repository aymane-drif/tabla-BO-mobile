{
  "expo": {
    "name": "TablaBO MA",
    "slug": "tabla-BO-mobile",
    "version": "1.0.0",
    "orientation": "default",
    "icon": "./assets/images/icon.png",
    "scheme": "tablabomobile",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.tabla.tablabomobile",
      "googleServicesFile": "./GoogleService-Info.plist",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "UIBackgroundModes": ["remote-notification"],
        "NSUserTrackingUsageDescription": "We use your device's identifier to help us understand how our app is used and to improve our services. This helps us provide a better, more reliable experience for you."
      }
    },
    "notification": {
      "icon": "./assets/images/android/res/mipmap-xxxhdpi/ic_launcher_monochrome.png",
      "iosDisplayInForeground": true
    },
    "android": {
      "googleServicesFile": "./google-services.json",
      "package": "com.tabla.tablabomobile",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/android/res/mipmap-xxxhdpi/ic_launcher_foreground.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-notifications",
      "@react-native-firebase/app",
      [
        "expo-build-properties",
        {
          "ios": {
            "useFrameworks": "static"
          }
        }
      ],
      "expo-tracking-transparency",
      "expo-updates"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "708aca9f-7159-455f-8f56-3050a40911d3"
      }
    }
  }
}
